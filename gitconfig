[user]
  name = wadackel
  email = wadackel@gmail.com

[color]
  ui = auto

[push]
  default = simple

[core]
  editor = nvim
  attributesfile = ~/.gitattributes
  excludesfile = ~/.gitignore_global
  precomposeUnicode = true
  ignorecase = false

[merge]
  tool = nvimdiff

[pull]
  ff = only

[fetch]
  prune = true

[diff]
  tool = nvimdiff

[difftool "nvimdiff"]
  cmd = "nvim -R -d -c \"wincmd l\" -d \"$LOCAL\" \"$REMOTE\""

[mergetool "nvimdiff"]
  cmd = "nvim -d -c \"4wincmd w | wincmd J\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"  \"$MERGED\""

[alias]
  aliases = !git config --get-regexp alias
  me = !git config --get-regexp user
  st = status
  ss = status --short
  unstage = reset -q HEAD --
  discard = switch --
  nevermind = !git reset --hard HEAD && git clean -d -f
  uncommit = reset --mixed HEAD~
  save = commit -m
  wip = !"git commit -m \"wip: $(date +'%F %T')\""
  resave = commit --amend
  amend = commit --amend
  invert = revert
  pushf = "push --force-with-lease"
  last = log -1 HEAD --format=format:"%Cred%H"
  summary = status -u -s
  graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
  history = log -10 --format=format:'%Cgreen%h %Cresetâ€¢ %s (%cN, %ar)'
  tags = tag
  branchout = switch -c
  branches = branch -a
  cleanbranches = !"git branch --merged | grep -v '*' | xargs -I % git branch -d %"
  writelines = !"git ls-files | xargs -n1 git --no-pager blame -w | wc -l"
  stashes = stash list
  remotes = remote -v
  prestage = diff -w --word-diff=color
  precommit = diff --cached -w --word-diff=color --word-diff-regex='[^[:space:]<>]+'
  move = mv
  remove = rm
  unmerged = branch --no-merged
  unstash = stash pop
  what = show -w
  untrack = rm -r --cached
  rewrite = rebase -i
  back = switch "-"
  contributors = shortlog -s -n
  filetrail = git log --follow -p -w
  mergetrail = log --ancestry-path --merges
  unmerged = diff --name-only --diff-filter=U
  cancel = reset --soft HEAD^
  nerge = merge --no-ff
  fixup = commit --fixup
  autosquash = rebase -i --autosquash

  cleanpr = "!git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done"

  # example) git lines wadackel 2016-12-20 2016-12-21
  lines = "!f() { git log --numstat --pretty=\"%H\" --author=$1 --since=$2 --until=$3 --no-merges | awk 'NF==3 {plus+=$1; minus+=$2} END {printf(\"%d (+%d, -%d)\\n\", plus+minus, plus, minus)}';}; f"

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process

[ghq]
  root = ~/develop

[github]
  user = wadackel
