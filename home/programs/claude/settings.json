        "hooks": [
          {
            "type": "command",
            "command": "approve-piped-commands.ts"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-notify.ts send Glass"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-notify.ts send Hero"
          },
          {
            "type": "command",
            "command": "claude-memo.ts",
            "async": true
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": []
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": []
      }
    ]
